@model IEnumerable<WebApplication1.Models.KhachHang>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Style/admin.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">

</head>
<body>
    <div class="container">
        <div class="sidebar">
            <a href="@Url.Action("Index","HomePage")" class="item">
                <img class="icon" src="~/Image/icon_admin1.png" alt="">
                <div style="list-style: bold;font-weight: 600; font-size: 24px;" class="text">
                    Admin website

                </div>
            </a>
            <hr>
            <a href="@Url.Action("Index","AdminProduct")" class="item">
                <img class="icon" src="~/Image/icon_product.png" alt="">
                <div class="text">
                    Sản phẩm

                </div>
            </a>
            <a href="@Url.Action("Index","Admin")" class="item">
                <img class="icon" src="~/Image/icon_khachhang.jpg" alt="">
                <div class="text">
                    Thống tin khách hàng

                </div>
            </a>
            <a style="color:black;text-decoration:none;" href="@Url.Action("DanhSachDonHang","QlyNhapHang")" class="item">
                <img class="icon" src="~/Image/icon_bil.png" alt="">
                <div class="text">
                    Danh sách đơn hàng

                </div>
            </a>
            <a style="color:black;text-decoration:none;" href="@Url.Action("DanhSachChuaDuyet","QlyNhapHang")" class="item">
                <img class="icon" src="~/Image/icon_bill.png" alt="">
                <div class="text">
                    Chờ duyệt

                </div>
            </a>
            <a style="color:black;text-decoration:none;" href="@Url.Action("Index","AdminFavorite")" class="item">
                <img class="icon" src="~/Image/favorite1.jpg" alt="">
                <div class="text">
                    Khách hàng yêu thích

                </div>
            </a>
            <a style="color:black;text-decoration:none;" href="@Url.Action("Index","TKDS")" class="item">
                <img class="icon" src="~/Image/icon_thongke.jpg" alt="">
                <div class="text">
                    Thống kê doanh thu

                </div>
            </a>
        </div>
        <div class="nav">
            <div class="content">
                <h1>Quản lí website bán điện thoại</h1>


                <div class="content_table">
                    <table id="myTable" class="display">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Khách hàng</th>
                                <th>SDT</th>
                                <th>Giới tính</th>
                                <th>Email</th>
                                <th>Mật khẩu</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <!-- code hiển thị data -->
                            @foreach(var item in Model)
            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.IDUser)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenKH)</td>
                                <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                                <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                            </tr>
            }
                           
                        </tbody>
                    </table>
                </div>


                <!--Sử dụng thư viện chart để vẽ biểu đồ-->
                </main>

                <footer>
                    <p>Địa chỉ: 828 Sư Vạn Hạnh</p>
                    <p>Tel: +28 999 888 555</p>
                </footer>
            </div>
        </div>
    </div>

</body>
</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>


<script>

    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
