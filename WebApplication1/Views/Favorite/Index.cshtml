@model List<WebApplication1.Models.YeuThich>
@{
    ViewBag.Title = "Index";
}
@{ var formatMoney = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");}
<!DOCTYPE html>
<html>
<head>
    <!-- ... -->
</head>
<style>
    body{
        
    }
    .phone {
        display: flex;
        align-items: center;
        margin: 10px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius:5px;
    }

    img {
        width: 80px;
        height: 80px;
        margin-right: 20px;
    }

    h3, p {
        margin: 5px 0;
    }

    button {
        background: #4CAF50;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 3px;
        cursor: pointer;
    }
</style>
<body>

    <h2 style="text-align: center;">Danh sách yêu thích</h2>
    <div style="display: flex; width: 1200px; flex-wrap: wrap; margin-left: 100px; margin-top: 50px;margin-bottom:240px;" class="container_favorite">
        @foreach (var yeuThich in Model)
        {
            <div style="width:33.33%;" class="phone">
                <img src="~/Image/@yeuThich.SanPham.AnhMinhHoa">
                <div>
                    <h4>@yeuThich.SanPham.TenSP</h4>
                    <p style="text-decoration:line-through">Giá: @String.Format(formatMoney, "{0:c0}", yeuThich.SanPham.GiaBanDau)</p>
                    <p>Giá KM: @String.Format(formatMoney, "{0:c0}", yeuThich.SanPham.GiaSP)</p>
                    <p>Ngày thêm: @yeuThich.NgayThem</p>
                    <form method="post" action="/Favorite/XoaYeuThich">
                        @Html.Hidden("IDSanPham", yeuThich.IDSanPham)
                        <button style="float:right;margin-left:230px;" type="submit">Xóa</button>
                    </form>
                </div>
            </div>
        }
    </div>
</body>
</html>
