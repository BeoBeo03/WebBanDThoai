@model IEnumerable<WebApplication1.Models.SanPham>

@{
    ViewBag.Title = "Index";
}
@{ var formatMoney = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BanDienThoai</title>
    <link rel="stylesheet" href="~/Style/style.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Style/slide.css">
    <link rel="stylesheet" href="~/owl.carousel.min.css">
    <link rel="stylesheet" href="~/owl.theme.default.min.css">
    <link rel="stylesheet" href="/Style/base.css">
</head>
<body>



    <!-- end header -->
    <!-- navbar -->
    <div class="navbar">
        <div class="container_navbar">
            <div class="row_navbar">

                <div class="nav_content">
                    <li class="nav-item">

                        <a class="nav-link active" aria-current="page" href="#"><i class="fa-solid fa-mobile-screen-button"></i>Điện thoại</a>
                        <ul class="sub-menu">
                            <li><a href="#">iPhone</a></li>
                            <li><a href="#">Samsung</a></li>
                            <li><a href="#">Xiaomi</a></li>
                            <li><a href="#">Oppo</a></li>
                            <li><a href="#">Nokia</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i style="font-size: 25px;" class="fa-brands fa-apple"></i>IOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa-solid fa-tablet"></i>Tablet</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="ri-headphone-line"></i>Phụ kiện</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="news-category.html"><i class="ri-newspaper-line"></i>Tin tức</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("GioiThieu","HomePage")"><i class="ri-profile-line"></i>Giới thiệu</a>
                    </li>

                </div>

            </div>
        </div>
    </div>

    <div class="slider">
        <div class="container_slider">

            <div id="mySlide1" class="mySlides fade">
                <div class="numbertext">1 / 3</div>
                <img src="~/Image/banner4.jpg" style="width:100%">
                <div class="text">Caption Text</div>
            </div>

            <div id="mySlide2" class="mySlides fade">
                <div class="numbertext">2 / 3</div>
                <img src="~/Image/banner5.png" style="width:100%">
                <div class="text">Caption Two</div>
            </div>

            <div id="mySlide3" class="mySlides fade">
                <div class="numbertext">3 / 3</div>
                <img src="~/Image/banner1.jpg" style="width:100%">
                <div class="text">Caption Three</div>
            </div>
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->


    </div>
    <div style="text-align:center">
        <span id="dot1" class="dot" onclick="currentSlide(1)"></span>
        <span id="dot2" class="dot" onclick="currentSlide(2)"></span>
        <span id="dot3" class="dot" onclick="currentSlide(3)"></span>
    </div>
    <!-- <div class="slider_img">
        <div class="slider_items_img">
            <img class="slider_items_img_right" src="/Image/banner5.png" alt="">
        </div>
        <div class="slider_img_items">
            <img class="slider_items_img_right" src="/Image/banner6.png" alt="">
        </div>
    </div> -->
    </div>

    <!-- end navbar -->
    <!-- Product -->
    <div class="content">

        <div class="container_content">

            <div class="brand">
                <h5>NHỮNG THƯƠNG HIỆU NỔI TIẾNG</h5>
                <ul>
                    <li><a href="category.html"><img src="~/Image/logo-apple.jpg" alt=""></a></li>
                    <li><a href="category.html"><img src="~/Image/samsung.png" alt="samsung"></a></li>
                    <li><a href="category.html"><img src="~/Image/oppo.png" alt=""></a></li>
                    <li><a href="category.html"><img src="~/Image/realmi.png" alt=""></a></li>


                </ul>
            </div>
            <div style="background: linear-gradient(rgb(0, 0, 0), rgb(220 200 34)) 0% 0% / cover;" class="product_list category_product">
                <div class="product_list_head">
                    <a style="text-decoration: none;list-style: none;" href="">
                        <h3>IPHONE</h3>
                    </a>
                </div>
                <div class="container_slider_product">
                    <div class="owl-carousel">
                        @foreach (var item in Model)
                        {
                           
                            
                        <div style="width: 1100px;height:390px;" class="element">
                            <a href="@Url.Action("Index","Product",new { id = item.IDSanpham })">
                                <div style="height:100%;" class="card">
                                    <img style="height:231px;" class="card-img-top" src="~/Image/@item.AnhMinhHoa" alt="Card image cap">
                                    <div class="overlay">
                                        <img class="overlay_img" src="~/Image/@item.AnhMoTa2" alt="">
                                    </div>
                                    <div class="card-body">
                                        <div class="product-name">
                                            <p class="card-text">@item.TenSP | Chính hãng VN/A</p>
                                        </div>
                                        <div class="card-badge">
                                            <p class="card-badge-info-items">
                                                Ram: @item.Ram
                                            </p>
                                            <p class="card-badge-info-items">
                                                @item.DungLuong

                                            </p>
                                        </div>
                                        <h5> @String.Format(formatMoney, "{0:c0}", item.GiaSP)</h5>


                                        <a href="@Url.Action("ThemMucYeuThich", "Favorite", new { IDSanPham = item.IDSanpham })" class="love-product">
                                            <i class="fa-regular fa-heart"></i>
                                        </a>
                                    </div>
                                </div>

                            </a>
                            
                        </div>
                        }
                        <!-- end product1 -->
                    </div>
                </div>
            </div>
            



                        <!-- end product1 -->
                    </div>
                </div>

            </div>
            <div   class="container_list_items">
                <div style="margin-left: 170px;" >
                    <div style="margin: 20px 0;" class="product_all">
                        <div style="font-size: 30px;text-align: center;" class="">TẤT CẢ SẢN PHẨM</div>
                    </div>
                    <div style="display: flex;flex-wrap: wrap;" class="container_slider_product">
                        @foreach (var item in Model)
                        {
                            <div style="margin-top: 10px;height:390px;" class="element">
                                <a href="@Url.Action("Index","Product",new { id = item.IDSanpham })">
                                    <div style="padding-left: 20px;" class="card">
                                        <img style="width: 195px;height:231px;" class="card-img-top" src="~/Image/@item.AnhMinhHoa" alt="Card image cap">
                                        <div style="margin-bottom:4px;" class="overlay">
                                            <img style="height: 235px;border-radius: 15px 15px 0 0;width: 235px;" class="overlay_img" src="~/Image/@item.AnhMoTa2" alt="">
                                        </div>
                                        <div class="card-body">
                                            <div class="product-name">
                                                <p class="card-text">@item.TenSP @item.DungLuong | Chính hãng VN/A</p>
                                            </div>
                                            <div class="card-badge">
                                                <p class="card-badge-info-items">
                                                    Ram: @item.Ram
                                                </p>
                                                <p class="card-badge-info-items">
                                                    @item.DungLuong
                                                </p>
                                            </div>
                                            <h5>  @String.Format(formatMoney, "{0:c0}", item.GiaSP)</h5>
                                            <a href="@Url.Action("ThemMucYeuThich", "Favorite", new { IDSanPham = item.IDSanpham })" class="love-product">
                                                <i class="fa-regular fa-heart"></i>
                                            </a>
                                        </div>
                                    </div>
                                </a>

                            </div>
                        }

                    </div>
                </div>
                
                            @*end product*@
                        

                        <!-- Import js của Owl Carousel -->
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
                        <script src="~/owl.carousel.min.js"></script>

                        <script src="~/JS/StyleSilder.js"></script>

                        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                        <script src="path/to/owl.carousel.min.js"></script>

</body>
</html>
