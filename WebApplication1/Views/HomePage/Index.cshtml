<body>
    <style>
        .element:nth-child(n+5) {
            display: none;
        }

        .favorite-icon-red {
            color: red;
        }

        .homepage-title {
            display: flex;
            align-items: center;
            margin-top: 70px;
            font-family: 'Times New Roman', Times, serif;
            font-size: 15px;
        }

            .homepage-title h1 {
                margin-right: 20px;
                margin-left: 20px;
            }

            .homepage-title .hr {
                flex-grow: 1;
                height: 1.5px;
                background-color: black;
                opacity: 0.5;
                width: 2%;
            }

        .homepage {
            display: flex;
            justify-content: space-between;
            margin-left: 100px;
            margin-top: 50px;
        }

        .homepage-image {
            width: 420px;
            height: 350px;
            border-radius: 10px;
        }

        .homepage-card {
            flex: 1;
            margin-right: -80px;
        }

            .homepage-card:last-child {
                margin-right: 0;
            }

        .homepage-card {
            position: relative;
            overflow: hidden;
        }

            .homepage-card::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 80%;
                height: 99%;
                background: rgba(0, 0, 0, 0.5); /* Màu nền làm mờ */
                opacity: 0;
                transition: opacity 0.3s;
                border-radius: 10px;
            }

            .homepage-card:hover::after {
                opacity: 0.4;
            }

            .homepage-card p {
                position: absolute;
                top: 38%;
                left: 35%;
                transform: translate(-50%, -50%);
                color: wheat;
                font-weight: bold;
                font-size: 50px;
                opacity: 0;
                transition: opacity 0.3s;
            }

            .homepage-card:hover p {
                opacity: 1;
            }
    </style>


    <!-- end header -->
    <!-- navbar -->
    <div class="navbar">
        <div class="container_navbar">
            <div class="row_navbar">

                <div class="nav_content">
                    
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("SanPhamTheoPhanLoai", "Product", new { phanloai = "iphone" })"><i style="font-size: 25px;" class="fa-brands fa-apple"></i>IOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("SanPhamTheoPhanLoai", "Product", new { phanloai = "samsung" })"><i class="fa-solid fa-tablet"></i>SAMSUNG</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="ri-headphone-line"></i>REALME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="news-category.html"><i class="ri-newspaper-line"></i>OPPO</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("GioiThieu","HomePage")"><i class="ri-profile-line"></i>Giới thiệu</a>
                    </li>

                </div>

            </div>
        </div>
    </div>

    <div class="slider">
        <div class="container_slider">

            <div id="mySlide1" class="mySlides fade">
                <div class="numbertext">1 / 3</div>
                <img src="~/Image/banner4.jpg" style="width:100%">
                <div class="text">Caption Text</div>
            </div>

            <div id="mySlide2" class="mySlides fade">
                <div class="numbertext">2 / 3</div>
                <img src="~/Image/banner5.png" style="width:100%">
                <div class="text">Caption Two</div>
            </div>

            <div id="mySlide3" class="mySlides fade">
                <div class="numbertext">3 / 3</div>
                <img src="~/Image/banner1.jpg" style="width:100%">
                <div class="text">Caption Three</div>
            </div>
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->


    </div>
    <div style="text-align:center">
        <span id="dot1" class="dot" onclick="currentSlide(1)"></span>
        <span id="dot2" class="dot" onclick="currentSlide(2)"></span>
        <span id="dot3" class="dot" onclick="currentSlide(3)"></span>
    </div>
